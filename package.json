{
  "name": "@appril/ui",
  "version": "0.2.5",
  "description": "Various UI Plugins for Appril Apps",
  "author": "Slee Woo",
  "license": "MIT",
  "engines": {
    "node": "20.10",
    "npm": "10.2"
  },
  "files": [
    "pkg/*"
  ],
  "// ✨ seems exports.types not fully supported by all editors yet?": "",
  "types": "./pkg/lib/index.d.ts",
  "exports": {
    ".": {
      "default": "./pkg/index.js",
      "types": "./pkg/lib/index.d.ts"
    },
    "./style.css": {
      "default": "./pkg/style.css"
    }
  },
  "scripts": {
    "// ✨ lint": "",
    "lint": "biome lint ./lib",
    "// ✨ build": "",
    "build": "set -e; npm run lint; cd lib; vite build"
  },
  "release-it": {
    "hooks": {
      "before:init": [
        "npm run build"
      ]
    }
  },
  "devDependencies": {
    "@appril/tsconfig": "^0.2.2",
    "@babel/types": "^7.23.6",
    "@biomejs/biome": "^1.5.3",
    "@types/bootstrap": "^5.2.10",
    "@types/node": "^20.11.5",
    "@vitejs/plugin-vue": "^5.0.3",
    "release-it": "^17.0.1",
    "vite": "^5.0.12",
    "vite-plugin-checker": "^0.6.2",
    "vite-plugin-dts": "^3.7.1",
    "vue-tsc": "^1.8.27"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-free": "^6.5.1",
    "bootstrap": "^5.3.2",
    "floating-vue": "^5.2.0",
    "vue": "^3.4.15"
  }
}
